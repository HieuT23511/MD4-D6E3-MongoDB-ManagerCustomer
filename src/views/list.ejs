<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous">
    <title>Customer HomePage</title>
  </head>
  <body>
    <div class="container mt-2">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Manager</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false"
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#">Home</a>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown"
                  role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  Customer Manager
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <li><a class="dropdown-item" href="/customer/list/1">List Customer</a></li>
                  <li><a class="dropdown-item" href="/customer/create">Add New Customer</a></li>
                </ul>
              </li>
            </ul>
            <form class="d-flex">
              <input class="form-control me-2" type="search"
                placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
          </div>
        </div>
      </nav>
      <div class=" card col-8 mt-4 mx-auto">
        <div class="card-header">
          <h5>List Customers</h2>
        <div class="card">
            <table class="table table-striped table-bordered table-hover text-center align-middle">
                <thead>
                    <tr> <h2>List of Products</h2></tr>
                    <tr>
                        <th scope="col">No.</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone Number</th>
                    </tr>
                </thead>
                <tbody>
                    <% customers.forEach((item,index)=>{%>
                    <tr >
                        <th scope="row"><%= index+1 %></th>
                        <td><%= item.name %></td>
                        <td><%= item.email %></td>
                        <td><%= item.tel %></td>
                        <td>
                            <a href="/customer/<%= item._id %>/update" class="btn btn-primary"> Update </a>
                            <a href="/customer/<%= item._id %>/delete" class="btn btn-danger" onclick="return confirm('Are you sure?')"> Delete </a>
                        </td>
                    </tr>
                    <%})%>
                </tbody>
            </table>
            <nav aria-label="Page navigation example">
              <ul class="pagination">
                <% if(currentPage === 1){%>
                  <li class="page-item disabled"><a class="page-link">Previous</a></li>
                <%} else {%>
                  <li class="page-item"><a class="page-link" href="/customer/list/<%= currentPage - 1 %>">Previous</a></li>  
                <%} %>

                <% for (let i =1; i <= pages; i++) {%> 
                  <% if(currentPage === i) {%>
                    <li class="page-item active"><a class="page-link" href="/customer/list/<%= i %>/"><%= i %></a></li>  
                  <%} else {%>
                    <li class="page-item"><a class="page-link" href="/customer/list/<%= i %>/"><%= i %></a></li>  
                  <%}%>
                <% } %>
                    <% if(currentPage === pages) {%>
                      <li class="page-item disabled"><a class="page-link">Next</a></li>
                    <%} else {%>
                      <li class="page-item"><a class="page-link">Next</a></li>
                    <%}%>
              </ul>
            </nav>
        </div>
  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
    integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
    crossorigin="anonymous"></script>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
    integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
    crossorigin="anonymous"></script>
</html>